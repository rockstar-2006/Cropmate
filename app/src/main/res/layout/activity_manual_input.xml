<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F9FA"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manual Soil Input"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the soil nutrient values analyzed from your local lab to get AI recommendations."
        android:textSize="14sp"
        android:textColor="#666"
        android:layout_marginBottom="32dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Nitrogen -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nitrogen (N)"
                android:textStyle="bold"
                android:textColor="@color/primary"/>
            <EditText
                android:id="@+id/et_n"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e.g. 45"
                android:inputType="number"
                android:background="@android:color/transparent"
                android:paddingVertical="12dp"
                android:textSize="18sp"/>
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEE" android:layout_marginBottom="16dp"/>

            <!-- Phosphorus -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phosphorus (P)"
                android:textStyle="bold"
                android:textColor="@color/primary"/>
            <EditText
                android:id="@+id/et_p"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e.g. 20"
                android:inputType="number"
                android:background="@android:color/transparent"
                android:paddingVertical="12dp"
                android:textSize="18sp"/>
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEE" android:layout_marginBottom="16dp"/>

            <!-- Potassium -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Potassium (K)"
                android:textStyle="bold"
                android:textColor="@color/primary"/>
            <EditText
                android:id="@+id/et_k"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e.g. 35"
                android:inputType="number"
                android:background="@android:color/transparent"
                android:paddingVertical="12dp"
                android:textSize="18sp"/>
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEE"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_proceed_to_crops"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="PROCEED TO SELECT CROP"
        android:backgroundTint="@color/primary"
        android:textColor="@color/white"
        app:cornerRadius="12dp"
        android:textStyle="bold"
        android:elevation="8dp"/>

</LinearLayout>
