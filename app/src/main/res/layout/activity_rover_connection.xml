<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Crop Info Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_crop_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/iv_selected_crop"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/logo" />

                <TextView
                    android:id="@+id/tv_selected_crop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="sans-serif-black"
                    android:text="PADDY"
                    android:textColor="@color/text_primary"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_depth_recommendation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/recommended_depth"
                    android:textColor="@color/primary"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Rover Status Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_rover_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SMART ROVER"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/view_status_dot"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/circular_button"
                        android:backgroundTint="@color/status_disconnected" />

                    <TextView
                        android:id="@+id/tv_rover_status_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/status_searching"
                        android:textColor="@color/text_secondary" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_connect_rover"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="24dp"
                    android:backgroundTint="@color/primary"
                    android:text="@string/btn_connect"
                    android:textColor="@color/white"
                    app:cornerRadius="12dp" />

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/loader_connecting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:indeterminate="true"
                    android:visibility="gone"
                    app:indicatorColor="@color/primary" />

                <Button
                    android:id="@+id/btn_start_analysis"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@color/accent"
                    android:text="@string/btn_start_analysis"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    app:cornerRadius="12dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Manual Sampling Instructions Card (NEW) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_manual_sampling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFF8E1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_manual_sampling"
                    android:textStyle="bold"
                    android:textColor="#FF6F00"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/desc_manual_sampling"
                    android:textColor="@color/text_primary"
                    android:textSize="13sp"
                    android:lineSpacingExtra="3dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Use this section to display AI/offline knowledge base info -->
        <TextView
             android:id="@+id/tv_knowledge_title"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="24dp"
             android:layout_marginBottom="8dp"
             android:text="Crop Guidelines &amp; Pests"
             android:textSize="18sp"
             android:textStyle="bold"
             android:textColor="@color/text_primary"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_crop_knowledge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#F8F9FA">

            <LinearLayout
                android:id="@+id/ll_knowledge_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_soil_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading crop details..."
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp"
                    android:textColor="@color/text_secondary"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="#E0E0E0"/>
                
                <TextView
                    android:id="@+id/tv_pests_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Common Pests &amp; Diseases"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:id="@+id/ll_pests_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>
                
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="12dp"
                    android:background="#E0E0E0"/>

                <TextView
                    android:id="@+id/tv_fertilizer_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fertilizer Recommendations"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tv_fertilizer_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Connect to internet for AI-based advice."
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:lineSpacingExtra="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
