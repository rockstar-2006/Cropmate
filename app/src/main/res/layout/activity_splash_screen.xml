<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF">

    <!-- Top Left Design (Touches the Top-Left Corner & Rotated) -->

    <!-- Top Right Design (Touches the Top-Right Corner) -->



    <!-- Expanding Background -->
    <View
        android:id="@+id/bgView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />
    <ImageView
        android:id="@+id/design_top_left"
        android:layout_width="240dp"
        android:layout_height="265dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="invisible"
        android:layout_marginStart="-53dp"
        android:layout_marginTop="-51dp"
        android:adjustViewBounds="true"
        android:rotation="-7"
        android:scaleType="fitXY"
        android:src="@drawable/design1" />

    <ImageView
        android:id="@+id/design_top_right"
        android:layout_width="230dp"
        android:layout_height="210dp"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="-47dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/design2" />

    <!-- Bottom Left Design (Touches the Bottom-Left Corner) -->
    <ImageView
        android:id="@+id/design_bottom_left"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-10dp"
        android:visibility="invisible"
        android:layout_marginBottom="-38dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/design3" />

    <!-- Bottom Right Design (Touches the Bottom-Right Corner) -->

    <!-- Ball -->

    <ImageView
        android:id="@+id/design_bottom_right"
        android:layout_width="180dp"
        android:layout_height="230dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-89dp"
        android:layout_marginBottom="-111dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/design4"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/ball"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/gradient_ball"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-100dp"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_animation"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ball"
        android:layout_marginTop="400dp"
        android:visibility="invisible"
        app:lottie_rawRes="@raw/dd"
        android:layout_marginEnd="500dp"
        android:layout_marginStart="50dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>




    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="600dp"
        android:layout_height="300dp"
        android:src="@drawable/logo"
        android:visibility="gone"/>
</RelativeLayout>
